@page "/"
@inject ViewModels.MainViewModel MainViewModel

<div class="container">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="WpText">Wordpress Text</label>
            <input type="text" @bind=@MainViewModel.WpText class="form-control" id="WpText" name="WpText"/>
        </div>

        <div class="form-group col-md-6">
            <label for="MdText">Markdown</label>
            <input type="text" @bind=@MainViewModel.MdText class="form-control" id="MdText" name="MdText"/>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <input type="button" value="Convert" @onclick=@(() => MainViewModel.ConvertText()) class="form-control" id="Submit" />
        </div>
    </div>
</div>

